    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "firebase": "^10.8.1",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.3.1",
    "nodemailer": "^6.9.11",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "vercel": "^33.5.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^0.24.0",
    "@types/assert": "^1.5.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "firebase-functions-test": "^3.1.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.5",
